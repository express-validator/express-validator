{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "charset": "utf-8",
    "pretty": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "coverage", "src/**/*.spec.ts"]
}
